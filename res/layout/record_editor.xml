<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:textAppearance="@android:attr/textAppearanceLarge"
		android:text="@string/label_description" android:textColor="@android:color/white"
		android:layout_margin="5sp" />
	<EditText android:id="@+id/description" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:textAppearance="@android:attr/textAppearanceLarge" />
	<TextView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:textAppearance="@android:attr/textAppearanceLarge"
		android:text="@string/label_category" android:textColor="@android:color/white"
		android:layout_margin="5sp" />
	<EditText android:id="@+id/category" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:textAppearance="@android:attr/textAppearanceLarge" />
	<TextView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:textAppearance="@android:attr/textAppearanceLarge"
		android:text="@string/label_amount" android:textColor="@android:color/white"
		android:layout_margin="5sp" />
	<EditText android:id="@+id/amount" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:textAppearance="@android:attr/textAppearanceLarge" />

<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="center" android:layout_marginTop="10sp">
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/submit" android:text="Submit" android:layout_marginRight="5sp" android:width="125sp"></Button>

<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/cancel" android:text="Cancel" android:layout_marginLeft="5sp" android:width="125sp"></Button>
</LinearLayout>
</LinearLayout>
